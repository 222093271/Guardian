            android:translationX="82dp"
            android:translationY="309dp" />

        <TextView
            android:id="@+id/newPaitentText"
            android:layout_width="87dp"
            android:layout_height="24dp"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/new_patient"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:translationX="256dp"
            android:translationY="309dp" />

        <TextView
            android:id="@+id/sighOutTxt"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/sign_out"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:translationX="268dp"
            android:translationY="609dp" />

        <TextView
            android:id="@+id/dailyReportTxt"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/daily_report"
