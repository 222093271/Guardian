            android:textSize="13sp"
            android:translationX="256dp"
            android:translationY="453dp" />

        <View
            android:id="@+id/settingsIcon"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:background="@drawable/menu_settings"
            android:elevation="4dp"
            android:translationX="92dp"
            android:translationY="545dp" />

        <Button
            android:id="@+id/patientListButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/homepage_button_background"
            android:translationX="52dp"
            android:translationY="361dp" />

        <TextView
            android:id="@+id/patientListTxt"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/patient_list"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:translationX="72dp"
            android:translationY="453dp" />

        <View
            android:id="@+id/newUserIcon"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:background="@drawable/add_new_user"
            android:elevation="4dp"
            android:translationX="92dp"
            android:translationY="253dp" />

        <View
            android:id="@+id/patientListIcon"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:background="@drawable/patient_list_icon"
            android:elevation="4dp"
            android:translationX="92dp"
            android:translationY="397dp" />

        <TextView
            android:id="@+id/settingsTxt"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:translationX="86dp"
            android:translationY="609dp" />

        <Button
            android:id="@+id/sighOutButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/homepage_button_background"
            android:translationX="236dp"
            android:translationY="513dp" />

        <View
            android:id="@+id/newPatientIcon"
            android:layout_width="55dp"
            android:layout_height="44dp"
            android:background="@drawable/new_patient_icon"
            android:elevation="4dp"
            android:translationX="270dp"
            android:translationY="253dp" />

        <Button
            android:id="@+id/newUserButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/homepage_button_background"
            android:translationX="52dp"
            android:translationY="217dp" />

        <Button
            android:id="@+id/newPaitentButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/homepage_button_background"
            android:translationX="236dp"
            android:translationY="217dp" />

        <View
            android:id="@+id/dailyReportIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/daily_report_icon"
            android:elevation="4dp"
            android:translationX="276dp"
            android:translationY="397dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/homepage_button_background"
            android:translationX="52dp"
            android:translationY="513dp" />

        <View
            android:id="@+id/sighOutIcon"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:background="@drawable/menu_signout"
            android:elevation="4dp"
            android:translationX="276dp"
            android:translationY="545dp" />

        <Button
            android:id="@+id/dailyReportButton4caretaker"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/homepage_button_background"
            android:translationX="236dp"
            android:translationY="361dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/tasksButton_admin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/homepage_button_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tasksTxt_admin"
                android:layout_width="88dp"
                android:layout_height="28dp"
                android:elevation="4dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tasks_label"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tasksButton_admin"
                app:layout_constraintEnd_toEndOf="@+id/tasksButton_admin"
                app:layout_constraintStart_toStartOf="@+id/tasksButton_admin" />

            <View
                android:id="@+id/patientListIcon_admin"
                android:layout_width="42dp"
                android:layout_height="44dp"
                android:background="@drawable/menu_button"
                android:elevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/tasksTxt_admin"
                app:layout_constraintEnd_toEndOf="@+id/tasksButton_admin"
                app:layout_constraintStart_toStartOf="@+id/tasksButton_admin"
                app:layout_constraintTop_toTopOf="@+id/tasksButton_admin" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/medicalDiaganosticsHeaderCardView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="-40dp"
        app:cardBackgroundColor="@color/TG_blue"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/medicalDiagnosticsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/welcome_admin"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/medicalDiagnosticsEditImageView" />

            <ImageView
                android:id="@+id/medicalDiagnosticsEditImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:contentDescription="TODO"
                app:layout_constraintBottom_toTopOf="@+id/medicalDiagnosticsTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>