<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.caretaker.AddTaskActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/patient_list_backgroud"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".view.caretaker.AddTaskActivity">

        <ImageView
            android:id="@+id/Task_list_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="65dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_button" />


        <ImageView
            android:id="@+id/patient_list_head_image"
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="56dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toEndOf="@+id/patient_list_company_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_icon_small" />

        <ImageView
            android:id="@+id/patient_list_company_icon"
            android:layout_width="67dp"
            android:layout_height="60dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="44dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gopher_logo" />

        <TextView
            android:id="@+id/patient_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Add Task"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patient_list_company_icon" />

        <SearchView
            android:id="@+id/Task_list_searchView"
            android:layout_width="370dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/white_rectangle_patient_list"
            android:iconifiedByDefault="false"
            android:queryHint="Search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patient_list_title" />


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Task_list_searchView"
            app:layout_constraintBottom_toTopOf="@+id/imageView62"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_for_AddTask"
                android:layout_width="360dp"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rectangle_patient_list"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_marginStart="5dp"
                        android:background="@color/white"
                        android:src="@drawable/orange_circle"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Add Task"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:translationZ="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/patient_list_company_icon" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:padding="5dp"
                    android:gravity="start"
                    android:orientation="vertical"
                    >
                <ImageButton
                    android:id="@+id/Iv_for_AddTask"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                     android:padding="5dp"
                    android:background="@color/white"

                    android:src="@drawable/add_image_button"/>
                </LinearLayout>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="360dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1.75"
                android:gravity="center"
                android:layout_gravity="center"
               />



        </LinearLayout>


        <ImageView
            android:id="@+id/imageView61"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="188dp"
            android:contentDescription="TODO"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/imageView62"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/three_point" />

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="TODO"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/add_new_96" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@id/nav_view"
        layout="@layout/task_navigation_view" />

</androidx.drawerlayout.widget.DrawerLayout>
